@model StoreSolution.Data.Areas.Stores.ViewModels.ProductVm
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 <div id="content">
        <div class="container">
          <div class="row">
            <div class="col-lg-12">
              <!-- breadcrumb-->
              <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item"><a href="#">Home</a></li>
                  <li class="breadcrumb-item"><a href="#">Category</a></li>
                  <li class="breadcrumb-item"><a href="#">Product</a></li>
                  <li aria-current="page" class="breadcrumb-item active">@Html.DisplayFor(model => model.Name)</li>
                </ol>
              </nav>
            </div>
            <div class="col-lg-3 order-2 order-lg-1">
            </div>
            <div class="col-lg-12 order-1 order-lg-2">
              <div id="productMain" class="row">
                <div class="col-md-6">
                   <div class="item">
                    <div class="product">
                      <div class="flip-container">
                        <div class="flipper">
                          <div class="front"><img src="" alt="Not found image" class="img-fluid"></div>
                          <div class="back"><img src="" alt="Not found image" class="img-fluid"></div> 
                        </div>
                     </div>
                    </div>
              </div>
                    
                </div>
                <div class="col-md-6">
                  <div class="box">
                     <input type="hidden" id="ProductId" value="@Html.DisplayFor(model => model.Id)" />
                    <h1 class="text-center">@Html.DisplayFor(model => model.Name)</h1>
                    <p class="goToDescription"><a href="#details" class="scroll-to">Scroll to product details, material &amp; care and sizing</a></p>
                    <p class="price">@Html.DisplayFor(model => model.Price)</p>
                    <p class="text-center buttons"><a href="#@*@Url.Action("Basket","Cart")*@" class="btn btn-primary navbar-btn" id="add-to-cart"><i class="fa fa-shopping-cart"></i> Add to cart</a></p>
                    
                  </div>
                </div>
              </div>
              <div id="details" class="box">
                <p></p>
                <h4>Product details</h4>
                <p></p>
               <p>@Html.DisplayFor(model => model.Description)</p> 
                <hr>
                <div class="social">
                  <h4>Show it to your friends</h4>
                  <p><a href="#" class="external facebook"><i class="fa fa-facebook"></i></a><a href="#" class="external gplus"><i class="fa fa-google-plus"></i></a><a href="#" class="external twitter"><i class="fa fa-twitter"></i></a><a href="#" class="email"><i class="fa fa-envelope"></i></a></p>
              
              </div>
              </div>
            </div>
            <!-- /.col-md-9-->
          </div>
        </div>
      </div>


